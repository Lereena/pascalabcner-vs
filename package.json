{
    "name": "pascalabcnet-extension",
    "description": "PascalABC.NET language extension",
    "author": "Oxana Kostikova",
    "license": "MIT",
    "version": "0.0.1",
    "icon": "images/logo.png",
    "publisher": "lereenadem",
    "repository": {
        "type": "git",
        "url": "https://github.com/Lereena/pascalabcnet-vs"
    },
    "engines": {
        "vscode": "^1.52.0"
    },
    "files.associations": {
        "*.pas": "pascalabcnet"
    },
    "activationEvents": [
        "onLanguage:pascalabcnet"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "paslanser.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "paslanser.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "pascalabcnet",
                "aliases": [
                    "PascalABC.NET"
                ],
                "extensions": [
                    ".pas"
                ]
            }
        ]
    },
    "dependencies": {
        "pascalabcnet-lsp": "^1.0.1",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.3",
        "@types/node": "^12.12.2",
        "@types/vscode": "^1.52.0",
        "typescript": "^4.0.2",
        "vscode-test": "^1.3.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b && cd node_modules/pascalabcnet-lsp && npm run compile",
        "watch": "tsc -b -w",
        "test": "sh ./scripts/e2e.sh"
    }
}